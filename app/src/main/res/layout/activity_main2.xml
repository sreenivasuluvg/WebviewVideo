    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="hello"
        />

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/gridview"
